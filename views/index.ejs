<!DOCTYPE html>
<html>
  <head>
    <style>
      table, td, th {
        border: 1px solid black;
      }
      
      table {
        border-collapse: collapse;
        width: 100%;
      }
      
      td {
        height: 50px;
        text-align: center;
      }
      </style>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <table>
       <tr>
          <th>ID</th>
          <th>Term</th>
          <th>Description</th>
          <th>References</th>
        </tr>
        
      <% names.forEach((name) => { %>
        <tr>
          <td>
             <%= name.id %>
          </td>
          <td style="width:20%">
            <%= name.Term %>
          </td>
          <td>
            <%= name.Description %>
          </td>
          <td>
            <%= name.References %>
          </td>
        </tr>
       <% }) %>
    </table>
  </body>
</html>
